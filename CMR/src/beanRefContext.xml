<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="ctx"
		class="org.springframework.context.support.ClassPathXmlApplicationContext">
		<constructor-arg>
			<list>
				<value>spring/spring-context-aop.xml</value>
				<value>spring/spring-context-database.xml</value>
				<value>spring/spring-context-model.xml</value>
				<value>spring/spring-context-util.xml</value>
				<value>spring/spring-context-service.xml</value>
				<value>spring/spring-context-jobs.xml</value>
			</list>
		</constructor-arg>
	</bean>

	<!-- child of above -->
	<bean id="jetty" lazy-init="true"
		class="org.springframework.context.support.ClassPathXmlApplicationContext">
		<constructor-arg>
			<list>
				<value>spring/spring-context-jetty.xml</value>
			</list>
		</constructor-arg>
		<constructor-arg>
			<ref bean="ctx" />
		</constructor-arg>
	</bean>

</beans>
