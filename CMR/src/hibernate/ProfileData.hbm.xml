<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="info.novatec.inspectit.communication.data.ci">
	<class name="ProfileData" table="profile_data">
		<id name="id" type="java.lang.Long" column="id">
			<generator class="seqhilo" />
		</id>

		<property name="name" column="name" not-null="true" />
		<property name="description" column="description" />

		<many-to-one name="environmentData" column="environment_id"
			class="EnvironmentData" not-null="true" />

		<set name="exceptionSensorDefinitions" cascade="delete">
			<key column="profile_id" />
			<one-to-many class="ExceptionSensorDefinitionData" />
		</set>

		<set name="methodSensorDefinitions" cascade="delete">
			<key column="profile_id" />
			<one-to-many class="MethodSensorDefinitionData" />
		</set>

		<set name="platformSensorDefinitions" cascade="delete">
			<key column="profile_id" />
			<one-to-many class="PlatformSensorDefinitionData" />
		</set>
	</class>
</hibernate-mapping>