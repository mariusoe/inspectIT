<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="info.novatec.novaspy.communication.data">
	<union-subclass name="RuntimeInformationData"
		extends="info.novatec.novaspy.communication.SystemSensorData"
		table="runtime_information_data">
		<property name="count" column="count" />
		<property name="minUptime" column="min_uptime" />
		<property name="maxUptime" column="max_uptime" />
		<property name="totalUptime" column="total_uptime" />
	</union-subclass>
</hibernate-mapping>