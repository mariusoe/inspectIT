<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="info.novatec.inspectit.communication.data.ci">
	<class name="ExceptionSensorDefinitionData" table="exception_sensor_definition_data">
		<id name="id" type="java.lang.Long" column="id">
			<generator class="seqhilo" />
		</id>

		<property name="description" column="description" />
		<property name="fullyQualifiedName" column="fqn" not-null="true" />
		<property name="activated" column="activated" not-null="true" />
		<property name="sensorOption" column="sensor_option"
			not-null="true" />

		<many-to-one name="profileData" column="profile_id" class="ProfileData" />
	</class>
</hibernate-mapping>