<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="info.novatec.novaspy.communication.data">
	<union-subclass name="SqlStatementData"
		extends="info.novatec.novaspy.communication.data.TimerData"
		table="sql_data">
			<property name="sql" column="sql" not-null="true" length="65535"/> 
			<property name="preparedStatement" column="prepared_statement"/>
	</union-subclass>
</hibernate-mapping>