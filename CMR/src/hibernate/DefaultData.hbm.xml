<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="info.novatec.inspectit.communication">
	<class name="DefaultData" abstract="true">
		<id name="id" type="java.lang.Long" column="id">
			<generator class="seqhilo">
				<param name="max_lo">1000</param>
			</generator>
		</id>

		<property name="platformIdent" column="platform_ident" />
		<property name="sensorTypeIdent" column="sensor_type_ident" />
		<property name="timeStamp" column="time_stamp" index="time_stamp_idx"/>
	</class>
</hibernate-mapping>