<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="info.novatec.novaspy.communication.data">
	<union-subclass name="CpuInformationData"
		extends="info.novatec.novaspy.communication.SystemSensorData"
		table="cpu_information_data">
		<property name="count" column="count" />
		<property name="minProcessCpuTime"
			column="min_process_cpu_time" />
		<property name="maxProcessCpuTime"
			column="max_process_cpu_time" />
		<property name="totalProcessCpuTime"
			column="total_process_cpu_time" />
		<property name="minCpuUsage" column="min_cpu_usage" />
		<property name="maxCpuUsage" column="max_cpu_usage" />
		<property name="totalCpuUsage" column="total_cpu_usage" />
	</union-subclass>
</hibernate-mapping>