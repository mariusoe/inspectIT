<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="info.novatec.inspectit.communication.data.ci">
	<class name="MethodSensorDefinitionData" table="method_sensor_definition_data">
		<id name="id" type="java.lang.Long" column="id">
			<generator class="seqhilo" />
		</id>

		<property name="name" column="name" not-null="true" />
		<property name="description" column="description" />
		<property name="fullyQualifiedName" column="fqn" not-null="true" />
		<property name="activated" column="activated" not-null="true" />
		<property name="sensorOption" column="sensor_option" />

		<many-to-one name="profileData" column="profile_id" class="ProfileData" />

		<set name="sensorTypes" table="sensor_types">
			<key column="method_sensor_definition_data_id" not-null="true" />
			<many-to-many class="SensorTypeData">
				<column name="sensor_type_data_id" not-null="true" />
			</many-to-many>
		</set>
	</class>
</hibernate-mapping>