<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="info.novatec.inspectit.communication.data.ci">
	<class name="EnvironmentData" table="environment_data">
		<id name="id" type="java.lang.Long" column="id">
			<generator class="seqhilo" />
		</id>

		<property name="name" column="name" unique="true" not-null="true" />
		<property name="description" column="description" />
		<property name="bufferStrategy" column="buffer_strategy"
			not-null="true" />
		<property name="sendStrategy" column="send_strategy"
			not-null="true" />

		<set name="profiles" cascade="all" inverse="true">
			<key column="environment_id" not-null="true"/>
			<one-to-many class="ProfileData" />
		</set>

		<set name="sensorTypes" cascade="all" inverse="true">
			<key column="environment_id" not-null="true" />
			<one-to-many class="SensorTypeData" />
		</set>
	</class>
</hibernate-mapping>