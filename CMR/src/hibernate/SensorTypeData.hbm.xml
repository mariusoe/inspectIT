<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="info.novatec.inspectit.communication.data.ci">
	<class name="SensorTypeData" table="sensor_type_data">
		<id name="id" type="java.lang.Long" column="id">
			<generator class="seqhilo" />
		</id>

		<property name="name" column="name" not-null="true" />
		<property name="fullyQualifiedName" column="fqn" not-null="true" />
		<property name="priority" column="priority" not-null="true" />
		<property name="description" column="description" />
		<property name="typeOption" column="type_option" not-null="true" />

		<many-to-one name="environmentData" column="environment_id"
			class="EnvironmentData" not-null="true" />

		<set name="methodSensorDefinitions" table="sensor_types" inverse="true">
			<key column="sensor_type_data_id" not-null="true" />
			<many-to-many class="MethodSensorDefinitionData">
				<column name="method_sensor_definition_data_id" not-null="true" />
			</many-to-many>
		</set>
	</class>
</hibernate-mapping>