		<dependency org="com.google.guava" name="info.novatec.guava" rev="11.0.1"  conf="osgi->default"/>

		<dependency org="com.esotericsoftware.kryo" name="info.novatec.kryo" rev="2.20" transitive="false" conf="osgi->default"/>

		<!-- Test -->
		<!-- Test NG should be on the build path via the Eclipse plug-in -->
		<dependency org="org.mockito" name="mockito-all" rev="1.9.0" conf="test->default" />
		<dependency org="com.ibm.icu" name="icu4j" rev="4.0.1" conf="test->default"/>
		<dependency org="org.hamcrest" name="hamcrest-all" rev="1.3" conf="test->default" />
	</dependencies>
</ivy-module>
